<%= form_for [article] do |a| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(article.errors.count, "error") %>.</h4>
    </div>
  <% end %>
  <%= form_with model: @article do |article| %>
    <div class="form-group">
      <%= a.label :title %>
      <%= a.text_field :title, class: 'form-control', :required => true %>
    </div>

    <div class="form-group">
      <%= a.label :content %>
      <%= a.text_area :content, rows: 8, class: 'form-control', placeholder: "Enter article content here", :required => true %>
    </div>

    <div class="form-group">
      <%= a.label :category %>
      <%= a.text_field :category, class: 'form-control', :required => true %>
    </div>

    <div class="form-group">
      <%= a.submit "Save", class: 'button is-link' %>
    </div>
  <% end %>
 
<% end %>
