<section class="container">
  <div class="row mt-2">
    <div class="col-md-8 border-right">
      <h3 class="is-size-3"><%= @article.title %></h3>
      <small>Written by <%= @article.user.email %></small>
      <div class="min-vh-100 mt-4">
        <p class="is-size-3"><%= @article.content %></p>
      </div>
    </div>
    <div class="col-md-4">
      <% if user_signed_in? && current_user.editor? %>
        <div>
          <button class="button">
            <%= link_to "New", new_article_path %>
          </button>
          <button class="button">
            <%= link_to "Edit", edit_article_path(@article) %>
          </button>
          <button class="button">
            <%= link_to "Delete Article", [@article], method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %>
          </button>
        </div>
      <% end%>
    </div>
  </div>
</section>
